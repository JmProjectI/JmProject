@model JMProject.Model.View.View_Full
@{
    ViewBag.Title = "手册封皮上传";
}
<link href="@Url.Content("~/webuploader-0.1.5/webuploader.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/webuploader-0.1.5/webuploader.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/ScriptsBll/NkscPhoto_fj.js")" type="text/javascript"></script>
<table class="tab_form" cellpadding="0" cellspacing="0">
    <tr>
        <td class="con" colspan="3">
            <div id="uploader" class="wu-example">
                <!--用来存放文件信息-->
                <ul id="thelist" class="imglist">
                    @if (ViewBag.Flag != "8" && ViewBag.Flag != "9" && ViewBag.Flag != "11" && ViewBag.Flag != "13")
                    {
                        <li id="picker"><a href="javascript:;" title="选择文件">
                            <img class="fjimg" alt="选择文件" src="../../Image/up.jpg" style="height: 120px;" />
                        </a></li>
                    }
                    @if (ViewBag.FpImage != null)
                    {
                        for (int i = 0; i < ViewBag.FpImage.Split('、').Length; i++)
                        {
                            string filename = ViewBag.FpImage.Split('、')[i];
                            if (!string.IsNullOrEmpty(filename))
                            {
                                string exp = filename;
                            <li id="@string.Format("fileid_{0}", i + 1)">
                            @if (ViewBag.Flag != "8" && ViewBag.Flag != "9" && ViewBag.Flag != "11" && ViewBag.Flag != "13")
                            {
                                <img alt="删除" onclick="deleteFJ('@string.Format("fileid_{0}", i + 1)','@filename')" style="cursor:pointer; position:absolute;right:15px;top:10px;" src="../../image/close.png" />
                            }
                            <a href="javascript:;" title="@filename">
                                <img class="fjimg" alt="@filename" src="@string.Format("../../../UploadFengPi/{0}", @ViewBag.Name+"/"+exp)" /><span>@filename</span>
                            </a></li>
                            }
                        }
                    }
                </ul>
            </div>
        </td>
    </tr>
</table>
