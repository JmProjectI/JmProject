@model List<JMProject.Model.Nksc_wtfk>
@{
    ViewBag.Title = "问题反馈";
}
<link href="@Url.Content("~/webuploader-0.1.5/webuploader.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/webuploader-0.1.5/webuploader.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/ScriptsBll/Scxx_wtfk.js")" type="text/javascript"></script>
<div style="width: 100%; height: auto; font-size: 13px;">
    @if (ViewBag.wtfkFlag == "0" && ViewBag.flag != "6" && ViewBag.flag != "8")
    {
        <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="pic_17" style="width: 180px;
            heigth: 30px;" onclick="saveup()">提交</a> 
    }
    <a href="@Url.Content("~/DownWTFK/问题反馈(模版).doc")" class="easyui-linkbutton" iconcls="pic_298" style="margin-left: 10px;width:180px;heigth:30px;">
        下载模版</a>
    @if (ViewBag.wtfkFlag == "2")
    {
        <p style="color: #900;">
            问题反馈已处理。</p>
    }
    else if (ViewBag.wtfkFlag == "1")
    { 
        <p style="color: #900;">
            问题反馈已提交，请耐心等待处理。</p>
    }
    else if (ViewBag.wtfkFlag == "0")
    {
        if (ViewBag.flag == "6" || ViewBag.flag == "8")
        {
        <p style="color: #900;">
            手册已完成，无法提交问题反馈</p>
        }
        else
        {
        <p style="color: #900;">
            1、下载模版文件、填入问题反馈信息。</p>
        <p style="color: #900;">
            2、上传反馈文档后单击《提交》。</p>
        }
    }
</div>
<div id="uploader" class="wu-example">
    <!--用来存放文件信息-->
    <ul id="thelist" class="imglist" style="width: 100%;">
        @if (ViewBag.wtfkFlag == "0" && ViewBag.flag != "6" && ViewBag.flag != "8")
        {
            <li id="picker"><a href="javascript:;" title="选择文件">
                <img class="fjimg" alt="选择文件" src="../../Image/up.jpg" style="height: 120px;" />
            </a></li>
        }
        @foreach (var item in Model)
        {
            <li id="@item.fkid">
                @if (item.flags == "0")
                {
                    <img alt="删除" onclick="deleteFJ('@item.fkid','@item.wtFile')" style="cursor:pointer; position:absolute;right:15px;top:10px;" src="../../image/close.png" />
                }
                <a href="javascript:;" title="@item.wtFile">
                    <img class="fjimg" alt="@item.wtFile" src="../../image/docx.png" /><span style="font-size: 12px;">@item.wtFile</span>
                </a></li>
        }
    </ul>
</div>
