@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>查看手册</title>
    <script src="@Url.Content("~/FlexPaper/js/jquery.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/FlexPaper/js/flexpaper_flash_debug.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/FlexPaper/js/flexpaper_flash.js")" type="text/javascript"></script>
</head>
<body style="margin:0px;padding:0px;">
    <div style="position: absolute;">
        <a id="viewerPlaceHolder" style="width: 1600px; height: 500px; display: block;"></a>
        <input type="hidden" id="file" value='@ViewBag.fileName' />
        <script type="text/javascript">
            $("#viewerPlaceHolder").height($(window).height() - 5);
            $("#viewerPlaceHolder").width($(window).width() - 5);
            var fileURL = $("#file").val();
            var fp = new FlexPaperViewer(
                    '/FlexPaper/FlexPaperViewer',
                    'viewerPlaceHolder',
                        {
                            config: {
                                SwfFile: escape('/UserPDF/' + fileURL),
                                Scale: 1.2,
                                ZoomTransition: 'easeOut',
                                ZoomTime: 0.5,
                                ZoomInterval: 0.2,
                                FitPageOnLoad: false,
                                FitWidthOnLoad: false,
                                PrintEnabled: true,
                                FullScreenAsMaxWindow: false,
                                ProgressiveLoading: false,
                                MinZoomSize: 0.2,
                                MaxZoomSize: 5,
                                SearchMatchAll: false,
                                InitViewMode: 'Portrait',
                                ViewModeToolsVisible: true,
                                ZoomToolsVisible: true,
                                NavToolsVisible: true,
                                CursorToolsVisible: true,
                                SearchToolsVisible: true,
                                ProgressiveLoading: true,
                                localeChain: 'zh_CN'
                            }
                        }
            );
        </script>
    </div>
</body>
</html>
